@model FiapWebAPI.Models.Remedio

@{
    ViewData["Title"] = "Remover medicamento";
}

<h1>Removendo medicamento</h1>

<h3>Tem certeza que deseja remover o medicamento?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dosagem) mg
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dosagem)
        </dd>
        <dt class = "col-sm-2">
